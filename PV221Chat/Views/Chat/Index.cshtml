@{
    ViewData["Title"] = "Chat Application";
}

<div class="container layout-container">
    <div class="chatList-section">
        @await Component.InvokeAsync("ChatList")
    </div>

    <div class="chat-section">
        @*  @await Component.InvokeAsync("Chat") *@
    </div>

    <div class="member-section">
        @await Component.InvokeAsync("MemberList")
    </div>
</div>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
        color: #333;
    }

    h2 {
        font-size: 1.8rem;
        margin-bottom: 15px;
        color: #343a40;
    }

    .layout-container {
        display: grid;
        grid-template-columns: 1fr 2fr 1fr;
        gap: 20px;
        margin-top: 20px;
        padding: 10px;
        height: calc(100vh - 40px);
    }

    .chatList-section, .chat-section, .member-section {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        border: 1px solid #e0e0e0;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.05);
        height: 100%;
        overflow-y: auto;
        transition: all 0.3s ease;
    }

    .chat-header {
        background-color: #007bff;
        padding: 10px;
        border-radius: 8px;
        color: #fff;
        text-align: center;
        border: 1px solid #007bff;
    }
</style>
