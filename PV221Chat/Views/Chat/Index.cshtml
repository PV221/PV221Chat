@{
    ViewData["Title"] = "Chat Application";
}

<div class="container layout-container">
    <div class="chatList-section">
        @await Component.InvokeAsync("ChatList")
    </div>

    <div class="chat-section">
        @*  @await Component.InvokeAsync("Chat") *@
    </div>

    <div class="member-section">
        @await Component.InvokeAsync("MemberList")
    </div>
</div>

<style>
    .layout-container {
        display: grid;
        grid-template-columns: 1fr 2fr 1fr;
        gap: 20px;
        margin-top: 20px;
        height: calc(100vh - 40px);
    }

    .chatList-section, .chat-section, .member-section {
        background-color: #f8f9fa; 
        padding: 20px;
        border-radius: 10px; 
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
        height: 100%; 
    }

    .chat-section {
        grid-column: 2; 
    }

    .chatList-section {
        grid-column: 1; 
    }

    .member-section {
        grid-column: 3;
    }
</style>
