@model PV221Chat.DTO.UserDTO
@{
    ViewData["Title"] = "Profile";
}
<div class="profile-container">
    <div class="left-section">
        <div class="info-group">
            <label>Nickname:</label>
            <span>@Model.Nickname</span>
        </div>
        <div class="image-container">
            <img src=@Model.AvatarUrl ?? ~/images/default-avatar.jpg" alt="Profile Image" class="image">
        </div>
        <div class="info-group" style="display: none;">
            <label>Avatar URL:</label>
            <span>@Model.AvatarUrl</span>
        </div>
    </div>

    <div class="right-section">
        <form method="post" asp-action="">
            <input type="hidden" id="userId" name="UserId" value="@Model.UserId" />
            <div class="info-group">
                <label>Email:</label>
                <span>@Model.Email</span>
            </div>
            <div class="info-group">
                <label>Hobbies:</label>
                <span>@Model.Hobbies</span>
            </div>
            <div class="info-group">
                <label>Skills:</label>
                <span>@Model.Skills</span>
            </div>
            <div class="info-group">
                <label for="BirthDate">Birth Date:</label>
                <span>@(Model.BirthDate?.ToString("yyyy-MM-dd") ?? "Not provided")</span>
            </div>
            <div class="info-group">
                <label for="CreationDate">Creation Date:</label>
                <span>@(Model.CreatedAt?.ToString("yyyy-MM-dd"))</span>
            </div>
            <div class="info-group">
                <label for="text "><a href="@Url.Action("ProfileEdit", "Profile")" class="btn btn-link">Change your information</a></label>
                @* <button type="button">Change Password</button> *@
            </div>
        </form>
    </div>
</div>

<style>
    .profile-container {
        display: flex;
        justify-content: center;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 20px auto;
    }

    .left-section {
        flex: 1;
        padding-right: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-right: 1px solid #ccc;
    }

    .image-container {
        margin: 20px 0;
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        border: 2px solid #ddd;
    }

    .image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .right-section {
        flex: 2;
        padding-left: 30px;
    }

    .info-group {
        margin-bottom: 15px;
    }

    label {
        display: inline-block;
        font-weight: bold;
        margin-right: 10px;
        color: #333;
    }

    span {
        color: #555;
        font-size: 16px;
    }

    .profile-container label {
        font-size: 16px;
    }

    .profile-container span {
        font-size: 16px;
    }

    button {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0056b3;
        }
</style>