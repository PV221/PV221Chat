@model BlogPostViewModel

<div class="blog-container">
    <!-- Левая часть с аватаром и ником -->
    <div class="left-column">
        <img src="@Model.User.AvatarUrl" alt="Avatar" class="avatar">
        <p>@Model.User.Nickname</p>
    </div>

    <!-- Правая часть с полем для поста -->
    <div class="right-column">
        <div class="create-post-box">
            <form asp-action="UpdateBlogPost" method="post">
                <textarea placeholder="Что произошло?" class="post-input" name="Content" required></textarea>
                <div class="action-buttons">
                    <button type="submit" class="post-action-button">Опубликовать</button>
                    <button type="button" class="post-action-button">Фото</button>
                </div>
            </form>
        </div>

        <!-- Место для списка постов -->
        <div class="post-list">
            @if (Model.BlogPosts == null || !Model.BlogPosts.Any())
            {
                <p>No posts available.</p>
            }
            else
            {
                foreach (var post in Model.BlogPosts)
                {
                    <div class="post">
                        <img src="@Model.User.AvatarUrl" alt="Avatar" class="avatar">
                        <p>@Model.User.Nickname</p>
                        <p>@post.Content</p>
                    </div>
                }
            }
        </div>
    </div>
</div>
<style>
    .blog-container {
        display: flex;
    }

    .left-column {
        width: 200px;
        text-align: center;
    }

        .left-column .avatar {
            width: 100px;
            height: 100px;
            background-color: red; 
        }

    .right-column {
        flex-grow: 1;
        padding-left: 20px;
    }

    .create-post-box {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 20px;
    }

    .post-input {
        width: 100%;
        height: 80px;
        resize: none;
        border: 1px solid #ccc;
        padding: 10px;
        font-size: 16px;
    }

    .action-buttons {
        display: flex;
        justify-content: flex-end;
        margin-top: 10px;
    }

    .post-action-button {
        width: 100px; 
        height: 30px; 
        background-color: #007BFF; 
        color: white; 
        border: none;
        margin-left: 5px;
        cursor: pointer; 
    }

    .post-list .post {
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        display: flex;
        align-items: center; 
    }

    .post .avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: grey; 
        margin-right: 10px;
    }
</style>
