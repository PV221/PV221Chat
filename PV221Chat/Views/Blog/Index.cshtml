@model PV221Chat.ViewModels.BlogPostViewModel

<div class="blog-container">
    <!-- Левая часть с аватаром и ником -->
    <div class="left-column">
        <img src="user.AvatarUrl" alt="Avatar" class="avatar">
        <p>user.Nickname</p>
    </div>

    <!-- Правая часть с полем для поста -->
    <div class="right-column">
        <div class="create-post-box">
            <textarea placeholder="Що відбулось?" class="post-input"></textarea>
            <div class="action-buttons">
                <button class="post-action-button"></button> 
                <button class="post-action-button"></button>
            </div>
        </div>

        <!-- Место для списка постов -->
        <div class="post-list">
                <div class="post">
                    <img src="" alt="Avatar" class="avatar">
                    <p>Username</p>
                    <p>Content</p>
                </div>
        </div>
    </div>
</div>

<style>
    .blog-container {
        display: flex;
    }

    .left-column {
        width: 200px;
        text-align: center;
    }

    .left-column .avatar {
            width: 100px;
            height: 100px;
            background-color: red; /* Временно красный квадрат для аватара */
    }

    .right-column {
        flex-grow: 1;
        padding-left: 20px;
    }

    .create-post-box {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 20px;
    }

    .post-input {
        width: 100%;
        height: 80px;
        resize: none;
        border: 1px solid #ccc;
        padding: 10px;
        font-size: 16px;
    }

    .action-buttons {
        display: flex;
        justify-content: flex-end;
        margin-top: 10px;
    }

    .post-action-button {
        width: 30px;
        height: 30px;
        background-color: #ccc;
        border: none;
        margin-left: 5px;
    }

    .post-list .post {
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ccc;
    }

    .post .avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: grey; /* Временно серый квадрат для аватара */
        margin-right: 10px;
    }
</style>
